<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/">

	<Script file="dwmic.lua" />
	
	<Frame name="dwmicMainFrame" visible="true" parent="UIParent">
    <Scripts>
      <OnLoad>
      	<!--Registra los eventos-->
      	this:RegisterEvent("VARIABLES_LOADED");
      	this:RegisterEvent("CHAT_MSG_WHISPER");
      	this:RegisterEvent("ADDON_LOADED");
      </OnLoad>
      <OnEvent>
      	if (event == "VARIABLES_LOADED") then
      		dwmic_OnLoad(); <!-- Cuando se de el evento "Cargar variables", ejecuta esta funciÃ³n. Realmente, se trata de un mensaje de inicio--> 
      	elseif (event == "CHAT_MSG_WHISPER") then
      	  	dwmic_OnEvent(); <!-- Para cuaando me wispeen, dwmic_OnEvent()-->
      	end
      </OnEvent>
	</Scripts>
	</Frame>
	
</Ui>